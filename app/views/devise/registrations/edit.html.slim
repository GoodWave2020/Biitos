h2.text-center Edit User
.row.form_contents
  .card.col-md-4
    .card-body
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.text_field :name, autofocus: true, class: 'form-control', placeholder: t('activerecord.attributes.user.name')
        .field
          br
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: t('activerecord.attributes.user.email')
        .field
          = f.label :icon
          br
          = f.file_field :icon, autofocus: true, class: 'filestyle'
        .field
          = f.label :artist_type
          br
          = f.label :Voicer
          = f.radio_button :artist_type, :Voicer
          = f.label :Tuner
          = f.radio_button :artist_type, :Tuner
        .field
          = f.text_area :profile, autofocus: true, class: 'form-control', placeholder: t('activerecord.attributes.user.profile')
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          div
            | Currently waiting confirmation for:
            = resource.unconfirmed_email
        .field
          i
            | (leave_blank_if_you_don't_want_to_change_it)
          br
          = f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: t('activerecord.attributes.user.password')
          - if @minimum_password_length
            br
            em
              = @minimum_password_length
              |  characters minimum
        .field
        = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: t('activerecord.attributes.user.password_confirmation')
        .field
          = f.password_field :current_password, autocomplete: "current-password", class: 'form-control', placeholder: t('activerecord.attributes.user.current_password')
        .actions
          = f.submit "Update", class: 'btn btn-primary'
      h3 #{t('views.public.delete_user')}
      p = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'
      = link_to "Back", :back
